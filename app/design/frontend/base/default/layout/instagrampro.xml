<?xml version="1.0"?>
<!--
/**
 * Magento Instagrampro extension
 *
 * @category   Magecomp
 * @package    Magecomp_Instagrampro
 * @author     Magecomp
 */
-->
<layout version="0.1.0">

	<default>
		<reference name="head">
			<action method="addCss"><stylesheet>css/instagrampro.css</stylesheet></action>
			<action method="addCss"><stylesheet>css/font-awesome-4.7.0/css/font-awesome.css</stylesheet></action>
			<action method="addCss"><stylesheet>css/font-awesome-4.7.0/css/font-awesome.min.css</stylesheet></action>
		</reference>
		
		
		<reference name="footer_links">
    		<action method="addLink" translate="label title" module="instagrampro" ifconfig="instagrampro/module_options/enabled">
        		<label>Instagrampro</label>
				<url>instagrampro/gallery/list</url>
        		<title>Instagrampro</title>
				<prepare>true</prepare>
    		</action>
		</reference>

	</default>
	
	
    <instagrampro_gallery_index translate="label">
        <label>Catalog Product Image Gallery Popup</label>
        <reference name="root">
            <action method="setTemplate"><template>page/popup.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="catalog/product_gallery" name="catalog_product_gallery" template="instagrampro/catalog/product/gallery.phtml"/>
        </reference>
    </instagrampro_gallery_index>
    
    <catalog_category_layered>
        <reference name="content">
            <block type="instagrampro/catalog_category_view_images"
                   template="instagrampro/catalog/category/view/images.phtml"
                   before="category.products">
            </block>
        </reference>
    </catalog_category_layered>
	
	<catalog_category_default>
        <reference name="content">
            <block type="instagrampro/catalog_category_view_images"
                   template="instagrampro/catalog/category/view/images.phtml"
                   before="category.products">
            </block>
        </reference>
    </catalog_category_default>
	
	<instagrampro_gallery_list>
	    <reference name="root">
			<action method="setTemplate"><template>page/1column.phtml</template></action>
    	</reference>
		<reference name="content">
            <block type="core/template" name="instagramprolist" template="instagrampro/gallerylist.phtml"/>
        </reference>
	</instagrampro_gallery_list>
	
	
	<default>
		<reference name="left">
		  <block type="core/template" name="left.insta" as="instaleft" before="-">
			<action method="setTemplate" ifconfig="instagrampro/module_options/showleft"><template>instagrampro/galleryleft.phtml</template></action>
		  </block>
		</reference>
	</default>
	
	<default>
		<reference name="right">
		  <block type="core/template" name="right.insta" as="instaright" before="-">
			<action method="setTemplate" ifconfig="instagrampro/module_options/showright"><template>instagrampro/galleryright.phtml</template></action>
		  </block>
		</reference>
	</default>
	
	<catalog_product_view>
        <reference name="product.info">
            <block type="instagrampro/homepage" name="product_details" template="instagrampro/producttab.phtml">
                <action method="addToParentGroup"><group>detailed_info</group></action>
                <action method="setTitle" translate="value"><value>Instagrampro</value></action>
            </block>
        </reference>
    </catalog_product_view>
    
	<catalog_product_view>
    	<reference name="product.info.media" as="media">
    		<action method="setTemplate" ifconfig="instagrampro/module_options/product_more">
			<template>instagrampro/catalog/product/view/media.phtml</template></action>
    	</reference>
		<reference name="content">
    			<block type="core/template" name="pinstagrampro" after="-" template="instagrampro/productviewlist.phtml" />
		</reference>
    </catalog_product_view>
	
	
    
</layout>
